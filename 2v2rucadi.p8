function move(pl)


	--left
	
	
	
	
		if(not checkcollision(pl.x - pl.psx, pl.y, 8, 8)) then
			pl.x -= pl.psx;
		end

	
	--right
		if(not checkcollision(pl.x + pl.psx, pl.y, 8, 8)) then
			pl.x += pl.psx;
		end
	end

	--jump
	if(btn(2,pl.num)) then
		if(pl.air == 0 and pl.jumping==0) then
			pl.psy = 24;
			pl.jumping = 1;
			pl.air = 1;
		end
	end
	
	
	--y update

		if(pl.jumping==1) then
			pl.y -=2;
			pl.psy -=2;
			if(pl.psy == 0) then
				pl.jumping = 0
			end
		end

	if(not solid(pl.x, pl.y+9)) then	--8 + 1 of movement 		
		if(pl.jumping == 0) then
				pl.y +=1; --gravedad
		end
	else
		pl.air = 0;
	end
		
end
function _init()
	p1.num = 0;
	p1.x = 20;
	p1.y = 20;
end
function _update()
	move(p1);
end
