function solid(x, y)
	val=mget(x/8, y/8)
 	cx = x
	cy = y
	flag = fget(val, 1)--0 = terrain flag
	return flag
end


function checkcollision(x,y,w,h)

 return 
  solid(x-w,y-h) or
  solid(x+w,y-h) or
  solid(x-w,y+h) or
  solid(x+w,y+h)
end




